{
  "type": "array",
  "properties": {
    "username": {
      "type": "string",
      "required": true,
      "pattern": "^\\w+([-+.]\\w+)*@\\w+([-.]\\w+)*\\.\\w+([-.]\\w+)*$"
    },
    "password": {
      "type": "string",
      "required": true,
      "pattern": "^[a-zA-Z]\\w{6,20}$"
    },
    "confirm_password": {
      "type": "string",
      "required": true,
      "pattern": "^[a-zA-Z]\\w{6,20}$"
    },
    "nickname": {
      "type": "string",
      "required": true,
      "pattern": "\\S{1,20}"
    },
    "code": {
      "type": "string",
      "required": true,
      "pattern": "\\S+"
    }
  }
}